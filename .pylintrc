[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    no-self-use,
    no-else-return,
    invalid-name,
    too-many-arguments,
    too-many-branches,
    too-many-locals,
    too-many-statements,
    too-many-public-methods,
    too-many-lines,
    duplicate-code,
    len-as-condition,
    fixme,
    singleton-comparison,
    unsubscriptable-object

[TYPECHECK]
ignored-classes=
    scoped_session,
    lxml.builder.ElementMaker
extension-pkg-whitelist=
    lxml

[SIMILARITIES]

# Minimum lines number of a similarity.
min-similarity-lines=6

# Ignore imports when computing similarities.
ignore-imports=yes
